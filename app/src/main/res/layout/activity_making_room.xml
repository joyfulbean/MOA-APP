<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/phonenumber_upperbarlayout"
        android:layout_width="match_parent"
        android:layout_height="45.71dp"
        android:background="@color/blue">

        <ImageButton
            android:id="@+id/createroom_backbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/backarrow"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:layout_marginStart="12dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/bold"
            android:gravity="center"
            android:text="방 만들기"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="16dp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30.48dp"
                android:layout_marginEnd="30.48dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="38.1dp"
                    android:fontFamily="@font/bold"
                    android:text="카테고리"
                    android:textColor="@color/black"
                    android:textSize="15.24dp" />

                <RadioGroup
                    android:id="@+id/createroom_radiogroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/createroom_radiostuff"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:fontFamily="@font/regular"
                        android:text="물품"
                        android:textAlignment="center"
                        android:textSize="13.71dp" />

                    <RadioButton
                        android:id="@+id/createroom_radiofood"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/regular"
                        android:text="음식"
                        android:textAlignment="center"
                        android:textSize="13.71dp" />

                    <RadioButton
                        android:id="@+id/createroom_radioott"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/regular"
                        android:text="OTT"
                        android:textAlignment="center"
                        android:textSize="13.71dp" />

                    <RadioButton
                        android:id="@+id/createroom_radiotransport"
                        android:layout_width="78dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/regular"
                        android:text="교통"
                        android:textAlignment="center"
                        android:textSize="13.71dp" />

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/createroom_stufflayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/createroom_stuffTitle_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:fontFamily="@font/bold"
                    android:text="@string/stuff_name"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    />

                <EditText
                    android:id="@+id/createroom_stuffTitle_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15.24dp"
                    android:layout_marginTop="22.86dp"
                    android:layout_marginEnd="15.24dp"
                    android:background="@null"
                    android:fontFamily="@font/regular"
                    android:hint="상품 이름"
                    android:inputType="textPersonName"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <ImageView
                    android:id="@+id/createroom_img1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/longline_edit" />

                <TextView
                    android:id="@+id/createroom_stuffPlace_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:fontFamily="@font/bold"
                    android:text="배달 장소"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22.86dp">

                    <EditText
                        android:id="@+id/createroom_stuffaddress_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="15.24dp"
                        android:layout_marginEnd="15.24dp"
                        android:background="@null"
                        android:fontFamily="@font/regular"
                        android:hint="배달 장소"
                        android:textColor="@color/black"
                        android:textSize="14dp" />

                </RelativeLayout>

                <ImageView
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/longline_edit" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="38.1dp"
                    android:fontFamily="@font/bold"
                    android:text="물품 가격"
                    android:textColor="@color/black"
                    android:textSize="15.24dp"
                    android:visibility="gone"/>

                <RelativeLayout
                    android:id="@+id/createroom_stuffprice_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22.86dp"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/createroom_stuffprice_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15.24dp"
                        android:layout_marginTop="22.86dp"
                        android:layout_marginEnd="15.24dp"
                        android:background="@null"
                        android:fontFamily="@font/regular"
                        android:hint="물품 가격"
                        android:inputType="textPersonName"
                        android:textColor="@color/black"
                        android:textSize="13.71dp"
                        android:visibility="gone"/>


                    <ImageView
                        android:id="@+id/createroom_stuffprice_line"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/createroom_stuffprice_edittext"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="7.62dp"
                        android:src="@drawable/shortline" />

                </RelativeLayout>

                <CheckBox
                    android:id="@+id/order_date_CB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:fontFamily="@font/bold"
                    android:text="주문 날짜"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    />

                <RelativeLayout
                    android:id="@+id/order_date_RL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22.86dp">

                    <TextView
                        android:id="@+id/createroom_stuff_date_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="15.24dp"
                        android:fontFamily="@font/regular"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="14dp" />

                    <ImageButton
                        android:id="@+id/createroom_stuff_date_button"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="end"
                        android:layout_marginEnd="15.24dp"
                        android:background="@null"
                        android:scaleType="fitCenter"
                        android:src="@drawable/calendaricon" />

                </RelativeLayout>

                <ImageView
                    android:id="@+id/order_date_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7.62dp"
                    android:src="@drawable/longline_edit"
                    android:visibility="visible"/>

                <CheckBox
                    android:id="@+id/order_time_CB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/bold"
                    android:text="주문 시간"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TimePicker
                    android:id="@+id/createroom_stuff_timepicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:timePickerMode="spinner"
                    android:visibility="gone"/>

                <CheckBox
                    android:id="@+id/stuff_link_CB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/bold"
                    android:text="상품 링크"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:visibility="gone"/>

                <EditText
                    android:id="@+id/createroom_stuffLink_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15.24dp"
                    android:layout_marginTop="22.86dp"
                    android:layout_marginEnd="15.24dp"
                    android:background="@null"
                    android:fontFamily="@font/regular"
                    android:hint="상품 링크"
                    android:inputType="textPersonName"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:visibility="gone"
                    />

                <ImageView
                    android:id="@+id/stuff_link_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/longline_edit"
                    android:visibility="gone"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/createroom_ottlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30.48dp"
                android:layout_marginEnd="30.48dp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:fontFamily="@font/bold"
                    android:text="@string/stuff_name"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    />

                <EditText
                    android:id="@+id/createroom_ottTitle_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15.24dp"
                    android:layout_marginTop="22.86dp"
                    android:layout_marginEnd="15.24dp"
                    android:background="@null"
                    android:fontFamily="@font/regular"
                    android:hint="상품 이름"
                    android:inputType="textPersonName"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/longline_edit" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/createroom_taxilayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30.48dp"
                android:layout_marginEnd="30.48dp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:fontFamily="@font/bold"
                    android:text="이동 경로"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    />

                <EditText
                    android:id="@+id/createroom_taxiTitle_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15.24dp"
                    android:layout_marginTop="22.86dp"
                    android:layout_marginEnd="15.24dp"
                    android:background="@null"
                    android:fontFamily="@font/regular"
                    android:hint="ex. 한동대 -> 포할역"
                    android:inputType="textPersonName"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/longline_edit" />

                <CheckBox
                    android:id="@+id/order_taxidate_CB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:fontFamily="@font/bold"
                    android:text="출 날짜"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    />

                <RelativeLayout
                    android:id="@+id/order_taxidate_RL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22.86dp">

                    <TextView
                        android:id="@+id/createroom_taxi_date_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="15.24dp"
                        android:fontFamily="@font/regular"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="14dp" />

                    <ImageButton
                        android:id="@+id/createroom_taxi_date_button"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="end"
                        android:layout_marginEnd="15.24dp"
                        android:background="@null"
                        android:scaleType="fitCenter"
                        android:src="@drawable/calendaricon" />

                </RelativeLayout>

                <ImageView
                    android:id="@+id/order_taxidate_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7.62dp"
                    android:src="@drawable/longline_edit"
                    android:visibility="visible"/>

                <CheckBox
                    android:id="@+id/order_taxitime_CB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/bold"
                    android:text="출 시간"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TimePicker
                    android:id="@+id/createroom_taxi_timepicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:timePickerMode="spinner"
                    android:visibility="gone"/>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="240dp"
                android:layout_height="38.1dp"
                android:layout_gravity="center"
                android:layout_marginTop="45.71dp"
                android:layout_marginBottom="38.1dp">

                <ImageButton
                    android:id="@+id/createroom_createbutton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:src="@drawable/big_button" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:fontFamily="@font/bold"
                    android:gravity="center"
                    android:text="방 만들기"
                    android:textColor="@color/white"
                    android:textSize="18dp" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>