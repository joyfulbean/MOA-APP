<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/phonenumber_background_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/phonenumber_upperbarlayout"
        android:layout_width="match_parent"
        android:layout_height="45.71dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/blue">

        <ImageButton
            android:id="@+id/phonenumber_backbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/backarrow"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:layout_marginStart="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bold"
            android:text="전화번호 인증"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:textAlignment="center"
            android:gravity="center"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/phonenumber_upperbarlayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="30.48dp"
        android:layout_marginEnd="30.48dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/phonenumber_number_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="38.1dp"
            android:hint="전화번호"
            android:textColorHint="@color/darkgrey"
            android:textColor="@color/black"
            android:fontFamily="@font/regular"
            android:textSize="14dp"
            android:inputType="textPersonName"
            android:layout_marginStart="15.24dp"
            android:layout_marginEnd="15.24dp"
            android:background="@null"/>

        <ImageView
            android:id="@+id/phonenumber_line1"
            android:layout_width="350.48dp"
            android:layout_height="wrap_content"
            android:src="@drawable/longline"
            android:layout_marginTop="10dp" />

        <EditText
            android:id="@+id/phonenumber_numberconfirm_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="38.1dp"
            android:hint="전화번호 확인"
            android:textColorHint="@color/darkgrey"
            android:textColor="@color/black"
            android:fontFamily="@font/regular"
            android:textSize="14dp"
            android:inputType="textPersonName"
            android:layout_marginStart="15.24dp"
            android:layout_marginEnd="15.24dp"
            android:background="@null"/>

        <ImageView
            android:id="@+id/phonenumber_line2"
            android:layout_width="350.48dp"
            android:layout_height="wrap_content"
            android:src="@drawable/longline"
            android:layout_marginTop="10dp" />



    </LinearLayout>

    <ImageButton
        android:id="@+id/phonenumber_finish_button"
        android:layout_width="240dp"
        android:layout_height="38.1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="38.1dp"
        android:src="@drawable/big_button"
        android:background="@null"
        android:scaleType="fitCenter"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bold"
        android:text="전화번호 등록하기"
        android:textSize="18dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/phonenumber_finish_button"
        app:layout_constraintTop_toTopOf="@id/phonenumber_finish_button"
        app:layout_constraintStart_toStartOf="@id/phonenumber_finish_button"
        app:layout_constraintEnd_toEndOf="@id/phonenumber_finish_button"/>

</androidx.constraintlayout.widget.ConstraintLayout>