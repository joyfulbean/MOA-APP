<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/chatpage_otherprofile_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:src="@drawable/profileicon2" />

    <TextView
        android:id="@+id/chatpage_pplname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/chatpage_otherprofile_iv"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/chatpage_otherprofile_iv"
        android:gravity="center"
        android:fontFamily="@font/regular"
        android:text="강예빈"
        android:textSize="12dp"
        android:layout_marginStart="10dp"/>

    <ImageButton
        android:id="@+id/chatpage_receipt_button"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/receipt_icon"/>

    <ImageButton
        android:id="@+id/chatpage_phone_button"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@id/chatpage_receipt_button"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="24dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/phoneicon"/>

</RelativeLayout>