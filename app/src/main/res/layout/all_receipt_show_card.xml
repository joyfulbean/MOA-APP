<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <LinearLayout
        android:id="@+id/wholereceipt_popup_menutextlayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="38dp"
            android:layout_marginEnd="30dp"
            android:focusable="true">

            <TextView
                android:id="@+id/wholereceipt_popup_foodname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="start"
                android:layout_marginEnd="50dp"
                android:layout_toStartOf="@+id/post_price_textview"
                android:fontFamily="@font/bold"
                android:text="떡볶이 (순한맛)"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/wholereceipt_popup_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/regular"
                android:gravity="end"
                android:text="3000원"
                android:textColor="@color/black"
                android:textSize="14dp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/wholereceipt_popup_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            android:layout_gravity="end"
            android:text="2개"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="30dp"/>

        <ImageView
            android:id="@+id/wholereceipt_popup_dottedline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dotted_line"
            android:layout_marginStart="38dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="12dp"/>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>